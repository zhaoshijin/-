.orderCon {
  width: 100%;
}
.order_detail {
  width: 100%;
  background: white;
  margin-top: 20rpx;
}
.detail_top {
  width: 100%;
  line-height: 80rpx;
  border-bottom: 1rpx solid #dddddd;
}
.detail_top text {
  font-size: 26rpx;
  margin-left: 10rpx;
}
.detail_right {
  float: right;
  margin-right: 20rpx;
  color: gainsboro;
}
.red {
  color: red;
}
.detail_con {
  width:100%;
  height: 300rpx;
  border-bottom: 1rpx solid #dddddd;
  padding: 10rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.detail_con_img {
  width: 30%;
  height: 300rpx;
}
.detail_con_img image {
  width: 100%;
  height: 100%;
}
.detail_con_title {
  margin-left: 20rpx;
  width: 60%;
  font-size: 30rpx;
}
.detail_bom {
  width: 100%;
  line-height: 80rpx;
  border-bottom: 1rpx solid #dddddd;
}
.detail_bom text {
  font-size: 25rpx;
  margin-left: 10rpx;
}
.detail_bom .detail_bom_money {
  font-size: 30rpx;
}
.detail_bom button {
  float: right;
  margin-right: 20rpx;
  width: 160rpx;
  height: 50rpx;
  font-size: 25rpx;
  margin-top: 15rpx;
  background: orangered;
  color: white;
  line-height: 50rpx;
}
.hide {
  display: none;
}
