<view class="container">
    <view class="polite">
        <view class="pointTop">
            <image class="pointTopImg" src="sharingImg/5.png"></image>
        </view>
        <view class="pointCenter">
            <image class='pointCenterImg' src="sharingImg/1.png"></image>
        </view>  
        <view class="centerText1">恭喜获得100.00元代金券1张</view>
        <text class="centerText3">已放入账户</text>
        <text class="centerText3">13183006209</text>   
        <view class="pointBottom">
           <view class="bottomQuan">
             <image class="quanLeft" src="sharingImg/3.png"></image>
             <image class="quanRight" src="sharingImg/4.png"></image>
             <view class="quanText1">
                <text class="text_q1">代金券</text>
                <text class="text_q2">¥</text>
                <text class="text_q3">100.00</text>
             </view>
             <view  class="quanText2">
                <text class="text_q4">永久有效</text>
                <image class="quanBom" src="sharingImg/2.png"></image>
                <text class="text_q5">详情</text>
             </view>
          </view>
          <button class="quanBtn" bindtap="findFriendUp">呼喊朋友一起来抢</button>
          <view class="footQuanT">
              <view class="footText1"></view>
              <text class="footText2">看看谁领了</text>
              <view class="footText3"></view>
          </view>
          <text class="quanFootText">没有更多记录</text>
        </view>
     </view>
</view>
<!-- 分享给朋友 -->
